<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity2">
    <Button
            android:text="2 Players"
            android:layout_width="158dp"
            android:layout_height="58dp" android:id="@+id/multiplayer"
            android:layout_marginEnd="145dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="145dp" app:layout_constraintHorizontal_bias="0.513" android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp"/>
    <TextView
            android:text="Game Selection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/MiddleText"
            android:layout_marginEnd="177dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="304dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="176dp" android:textSize="34sp"
            app:layout_constraintHorizontal_bias="0.497"/>
    <Button
            android:text="1 Player"
            android:layout_width="158dp"
            android:layout_height="58dp" android:id="@+id/singleplayer"
            android:layout_marginEnd="145dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="145dp" app:layout_constraintHorizontal_bias="0.513" android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="480dp"/>
    <TextView
            android:text="No Friends :("
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView4"
            android:textSize="20sp" android:layout_marginEnd="149dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="149dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="436dp"/>
    <TextView
            android:text="Sad, but it's ok you can still play!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView5"
            android:layout_marginEnd="106dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="106dp"
            android:textSize="16sp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.678"
            android:layout_marginTop="460dp"/>
    <TextView
            android:text="Yay, Friends!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView6"
            android:textSize="20sp" android:layout_marginEnd="153dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="176dp"
            app:layout_constraintHorizontal_bias="0.896"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="116dp"/>
    <TextView
            android:text="If you lose find a new Friend!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView7"
            android:textSize="16sp" android:layout_marginEnd="105dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="105dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="140dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>